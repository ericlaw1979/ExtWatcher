{
  "manifest_version": 2,
  "name": "extWatcher",
  "short_name": "extWatcher",
  "description": "Watch a Chromium-based browser for extension install and removal events.",
  "version": "1.0.0.1",
  "author": "Eric Lawrence (@ericlaw)",

  "icons": {
    "16": "images/icon16.png"
  },

  "browser_action": {
     "default_icon": {
        "16": "images/icon16.png"
      },
   "default_title": "Show Log"
  },

  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },

  "permissions": [
    "tabs",
    "management",
    "storage"
  ]
}
